<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Show</title>
  </head>
  <body>
    <%= image_tag @photo.image.url(:large) %>
    <%= @photo.caption %>
    <a href="/photos/<%= @photo.id %>/comments/new">Add comment</a>
    <div>
      <h2>Comments</h2>
      <% i = 0 %>
        <% @photo.comments.each do |comment| %>
        <% i += 1 %>
          <h3> <%= comment.description %></h3>
        <% end  %>
    </div>
    <div class="like-form">
    <%= form_tag likes_path, method: 'post' do %>
      <%= hidden_field_tag(:photo_id, "#{@photo.id}") %>
      <%= submit_tag "Like!" %>
    <% end %>
    </div>
    <div>
      <h3>Likes</h3>
    </div>
  </body>
</html>
